{
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "css.validate": false,
  "eslint.validate": ["graphql"],
  "eslint.rules.customizations": [
    { "rule": "@graphql-eslint/no-unused-fields", "severity": "off" },
    { "rule": "@graphql-eslint/no-unreachable-types", "severity": "off" },
    { "rule": "@graphql-eslint/fields-on-correct-type", "severity": "off" },
    { "rule": "@graphql-eslint/known-type-names", "severity": "off" },
    { "rule": "@graphql-eslint/unique-operation-name", "severity": "off" },
    { "rule": "@graphql-eslint/unique-fragment-name", "severity": "off" },
    { "rule": "@graphql-eslint/require-id-when-available", "severity": "off" },
    { "rule": "import/no-unused-modules", "severity": "off" }
  ],
  "tailwindCSS.experimental.classRegex": [["ctl\\(`([^`]+)`\\)", "([^\"]+)"]]
}

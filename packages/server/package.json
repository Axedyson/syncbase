{
  "name": "@syncbase/server",
  "packageManager": "yarn@3.2.2",
  "private": true,
  "scripts": {
    "dev": "yarn clean && tsnd --respawn --transpile-only src/index.ts",
    "build": "yarn clean && rm -fr tsconfig.tsbuildinfo && tsc && mikro-orm cache:generate",
    "start": "node dist/index.js",
    "db:seed:reset": "mikro-orm schema:fresh --seed --run",
    "test": "jest --colors",
    "test:ci": "yarn test --ci --testTimeout=20000",
    "typecheck": "tsc --noEmit",
    "clean": "mikro-orm cache:clear && rm -fr dist"
  },
  "dependencies": {
    "@mikro-orm/core": "^5.3.1",
    "@mikro-orm/migrations": "^5.3.1",
    "@mikro-orm/postgresql": "^5.3.1",
    "@mikro-orm/reflection": "^5.3.1",
    "apollo-server-core": "^3.10.2",
    "apollo-server-express": "^3.10.2",
    "argon2": "^0.28.7",
    "class-validator": "^0.13.2",
    "connect-redis": "^6.1.3",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "graphql": "^15.8.0",
    "graphql-scalars": "^1.18.0",
    "ioredis": "^5.2.2",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.3.1",
    "@mikro-orm/seeder": "^5.3.1",
    "@types/connect-redis": "^0.0.18",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/jest": "^28.1.8",
    "@types/node": "^18.7.13",
    "@types/supertest": "^2.0.12",
    "jest": "^28.1.3",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node-dev": "^2.0.0",
    "typescript": "~4.7.4"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/orm.ts",
      "./dist/config/orm.js"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testRegex": "/tests/.+\\.test\\.ts$",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "reporters": [
      "default",
      "github-actions"
    ],
    "maxWorkers": 1,
    "coverageThreshold": {
      "global": {
        "statements": 90,
        "branches": 50,
        "functions": 90,
        "lines": 90
      }
    }
  }
}
